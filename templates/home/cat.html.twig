{% extends 'base.html.twig' %}

{% block title %}categorie {% endblock %}

{% block body %}
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 offset-lg-3 col-md-12 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Categorie</h1>
                    <ul class="breadcrumb-nav">
                        <li>
                            <a href="{{ path('home') }}">Home</a>
                        </li>
                        <li>Categorie: {{ slug }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Start Domain Search -->
{% include "home/seach.html.twig" %}
<!-- End Domain Search -->

<!-- Start last new section -->
<section class="blog-section section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3 class="wow zoomIn" data-wow-delay=".2s">Newest Stories</h3>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Our Lastest News Of Categorie : {{ slug }}</h2>
                    <p class="wow fadeInUp" data-wow-delay=".6s">Explore and learn more about everything from
                        machine learning and global payments to scaling
                        your team.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="row">
                {% for storie in stories %}
                {% if storie.type.nom == slug %}
                <div class="col-lg-4 col-md-6 col-12 wow fadeInUp" data-wow-delay=".2s" style="visibility:visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                    <div class="single-blog-grid">
                        <div class="blog-img">
                            <a href="#">
                                <img src="{{ asset('images/blog/blog-1.png') }}" alt="#">
                            </a>
                        </div>
                        <div class="blog-content">
                            <div class="meta-info">
                                {{ storie.auteur.nom }}-{{ storie.auteur.prenom }} :
                                <a href="{{ path('cat', {slug: storie.type.nom}) }}">{{ storie.type.nom }}</a>
                            </div>
                            <h4>
                                <a href="#"> {{ storie.titre }}</a>
                            </h4>
                            <p>
                                {{ storie.synopsie }}
                            </p>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<!-- End last new section  -->
{% endblock %}