{% extends 'base.html.twig' %}

{% block title %}item {% endblock %}

{% block body %}
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 offset-lg-3 col-md-12 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Reading ...</h1>
                    <ul class="breadcrumb-nav">
                        <li>
                            <a href="{{ path('home') }}">Home</a>
                        </li>
                        <li>Reading</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="blog-section section">
    <div class="container">
        <div class="row">
            {% for chap in storie.chapitres %}
            <div class="col-lg-8 col-md-9 col-12 wow fadeInUp" data-wow-delay=".2s" style="visibility:visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                <div class="single-blog-grid">
                    <div class="blog-title">
                        <h4>{{ storie.titre }}</h4>
                    </div>
                    <div class="blog-img">
                        <a href="#">
                            <img src="{{ asset('images/blog/blog-1.png') }}" alt="#">
                        </a>
                    </div>
                    <div class="blog-content">
                        <div class="meta-info">
                            <a href="javascript:void(0)">Chapitre: {{ chap.id }}</a>
                        </div>
                        <h5>{{ chap.titre }}</h5>
                        <p>
                            {{ chap.contenu }}
                        </p>
                    </div>
                </div>
            </div>
            {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
            {% endfor %}
            <div class="col-lg-4 col-md-3 col-12 wow fadeInUp bg-light" data-wow-delay=".2s" style="visibility:visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                <div class="container">
                    <div class="row">
                        <div class="section-title">
                            <h3 class="wow zoomIn" data-wow-delay=".2s" style="visibility:visible; animation-delay:0.2s;animation-name:zoomIn;">Other stories</h3>
                            <h4 class="wow fadeInUp" data-wow-delay=".4s" style="visibility:visible; animation-delay:0.4s;animation-name:fadeInUp;">Have you ever read this?</h4>
                        </div>
                    </div>
                    <div class="row bg-light">
                        <div class="col-4">
                            <div class="blog-img">
                                <a href="#">
                                    <img src="{{ asset('images/blog/blog-3.png') }}" alt="#" style="border-radius: 100px; width:80px; height:80px">
                                </a>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="blog-content">
                                <div class="blog-title">
                                    <a href="#"><h5>Jane Anderson</h5> <span>The Next</span></a>
                                </div>
                                <p>le titre de h'histoire</p>
