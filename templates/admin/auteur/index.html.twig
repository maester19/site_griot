{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 offset-lg-3 col-md-12 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Author manager</h1>
                    <ul class="breadcrumb-nav">
                        <li>
                            <a href="{{ path('home') }}">Home</a>
                        </li>
                        <li>Author</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row block-content mb-3">
    <div class="col-9">
    <div class="container">
        <div class="row">
            <div class="section-title">
                <h3 class="wow zoomIn" data-wow-delay=".2s" style="visibility:visible; animation-delay:0.2s;animation-name:zoomIn;">Auteur</h3>
                <h2 class="wow fadeInUp" data-wow-delay=".4s" style="visibility:visible; animation-delay:0.4s;animation-name:fadeInUp;">liste des auteurs</h2>
                
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Biographie</th>
                    <th>Email</th>
                    <th>CreatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for auteur in auteurs %}
                <tr>
                    <td>{{ auteur.id }}</td>
                    <td>{{ auteur.nom }}</td>
                    <td>{{ auteur.prenom }}</td>
                    <td>{{ auteur.biographie }}</td>
                    <td>{{ auteur.email }}</td>
                    <td>{{ auteur.createdAt ? auteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('auteur_show', {'id': auteur.id}) }}" class="btn btn-outline-dark">show</a>
                        <a href="{{ path('auteur_edit', {'id': auteur.id}) }}" class="btn btn-outline-success">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('auteur_new') }}" class="btn btn-outline-info">Create new</a>
    </div>
    </div>
    <div class="col-3 align-items-center bg-light mt-3">
        <div class="col-lg-12 col-md-12 col-12">
            {% include "admin/nav.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}
